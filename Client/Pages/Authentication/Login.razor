@page "/login"
@using Blazored.LocalStorage;
@using Blazored.SessionStorage;
@using SimWars.Shared.Components
@inherits ComponentBase
@attribute [AllowAnonymous]

<PageTitle>Login</PageTitle>

<EmailTextField @ref="_emailRef" @bind-Value="_email"/>

@code {

	[Inject] private ILocalStorageService? LocalStorage { get; set; }
	[Inject] private ISessionStorageService? SessionStorage { get; set; }
	[Inject] protected NavigationManager Navigation { get; set; } = null!;

	private string _email = string.Empty;
	private string _password = string.Empty;
	private EmailTextField? _emailRef;
	private MudTextField<string>? _passwordRef;

	private bool _loginFailed;

	
}
